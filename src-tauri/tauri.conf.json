{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.hautlys.image",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "iMAGE",
        "width": 414,
        "height": 896,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; media-src 'self' blob:; connect-src 'self'"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "scope": ["$APPLOCALDATA/**", "$TEMP/**"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["ios", "android", "deb", "appimage", "dmg", "msi"],
    "category": "Photography",
    "copyright": "2026 iMAGE",
    "shortDescription": "Browse EC2 files like Google Photos",
    "longDescription": "Connect to EC2 instances and browse photos, videos, and documents in a Google Photos-like interface",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "minimumSystemVersion": "14.0",
      "developmentTeam": ""
    },
    "android": {
      "minSdkVersion": 24,
      "targetSdkVersion": 34
    }
  }
}
